<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.apache.hadoop.eclipse.ui.internal.HadoopPerspectiveFactory"
            icon="icons/hadoop-logo-16x16.png"
            id="org.apache.hadoop.eclipse.ui.perspective"
            name="Hadoop">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="org.apache.hadoop.eclipse.ui.internal.hdfs.HDFSLightweightLabelDecorator"
            id="org.apache.hadoop.eclipse.ui.decorator"
            label="HDFS Resource Decorator"
            lightweight="true"
            location="BOTTOM_RIGHT"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IResource">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="org.apache.hadoop.eclipse.ui.navigatorContent.hdfs">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="org.apache.hadoop.eclipse.ui.internal.hdfs.HDFSCommonContentProvider"
            icon="icons/hadoop-hdfs-16x16.gif"
            id="org.apache.hadoop.eclipse.ui.navigatorContent.hdfs"
            labelProvider="org.apache.hadoop.eclipse.ui.internal.hdfs.HDFSLabelProvider"
            name="Navigator HDFS Content Provider"
            priority="higher">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </triggerPoints>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.apache.hadoop.eclipse.ui.internal.hdfs.NewHDFSWizard"
            finalPerspective="org.apache.hadoop.eclipse.ui.perspective"
            icon="icons/hadoop-hdfs-16x16.gif"
            id="org.apache.hadoop.eclipse.ui.wizard.newHdfsServer"
            name="New HDFS Server">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.apache.hadoop.eclipse.ui.team.fileContribution"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="org.apache.hadoop.eclipse.ui.internal.hdfs.DownloadResourceAction"
               icon="icons/download.gif"
               id="org.apache.hadoop.eclipse.ui.team.FileDownloadAction"
               label="Download"
               menubarPath="additions">
         </action>
         <action
               class="org.apache.hadoop.eclipse.ui.internal.hdfs.UploadResourceAction"
               icon="icons/upload.gif"
               id="org.apache.hadoop.eclipse.ui.team.FileUploadAction"
               label="Upload"
               menubarPath="additions">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.apache.hadoop.eclipse.ui.team.folderContribution"
            objectClass="org.eclipse.core.resources.IFolder">
         <action
               class="org.apache.hadoop.eclipse.ui.internal.hdfs.DownloadResourceAction"
               icon="icons/download.gif"
               id="org.apache.hadoop.eclipse.ui.team.folderDownloadContribution"
               label="Download"
               menubarPath="additions">
         </action>
         <action
               class="org.apache.hadoop.eclipse.ui.internal.hdfs.UploadResourceAction"
               icon="icons/upload.gif"
               id="org.apache.hadoop.eclipse.ui.team.folderUploadContribution"
               label="Upload"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.eclipse.ui.navigator.ProjectExplorer"
            typeMapper="org.apache.hadoop.eclipse.ui.internal.hdfs.PropertyTypeMapper">
         <propertyCategory
               category="general"></propertyCategory>
         <propertyCategory
               category="resource">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.eclipse.ui.navigator.ProjectExplorer">
         <propertyTab
               category="resource"
               id="org.apache.hadoop.eclipse.ui.propertyTab.hdfs"
               image="icons/hadoop-hdfs-16x16.gif"
               label="HDFS">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.eclipse.ui.navigator.ProjectExplorer">
         <propertySection
               class="org.apache.hadoop.eclipse.ui.internal.hdfs.HDFSPropertySection"
               enablesFor="1"
               id="org.apache.hadoop.eclipse.ui.propertySection.hdfs"
               tab="org.apache.hadoop.eclipse.ui.propertyTab.hdfs">
            <input
                  type="org.apache.hadoop.eclipse.internal.hdfs.HDFSFileStore">
            </input>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.apache.hadoop.eclipse.internal.hdfs.HDFSFileStore"
            class="org.apache.hadoop.eclipse.ui.internal.HadoopAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>

</plugin>
